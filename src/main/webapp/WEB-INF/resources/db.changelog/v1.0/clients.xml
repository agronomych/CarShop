<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="1" author="Anton Suryapin">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="clients"/>
            </not>
        </preConditions>

        <createTable tableName="clients">
            <column name="id" type="bigint" remarks="ID клиента">
                <constraints    primaryKey="true"
                                primaryKeyName="client_pk"
                                nullable="false" />
            </column>

            <column name="name" type="varchar(255)" remarks="Имя клиента">
                <constraints nullable="false"/>
            </column>

            <column name="lastName" type="varchar(255)" remarks="Фамилия клиента">
                <constraints nullable="false"/>
            </column>

            <column name="patronymic" type="varchar(255)" remarks="Отчество клиента (если есть)"/>

            <column name="passport" type="varchar(20)" remarks="Паспорт клиента">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <createIndex tableName="clients" indexName="clients_lastName_idx">
            <column name="lastName"></column>
        </createIndex>
        <comment>Индекс для поиска по фамилии</comment>

        <createIndex tableName="passport" indexName="clients_passport_idx">
            <column name="passport"></column>
        </createIndex>
        <comment>Индекс для поиска по номеру паспорта</comment>

        <createIndex tableName="clients" indexName="clients_id_idx">
            <column name="id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>