<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="1" author="Anton Suryapin">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="contracts"/>
            </not>
        </preConditions>
        
        <createTable tableName="contracts">
            <column name="id" type="bigint">
                <constraints primaryKey="true"
                             primaryKeyName="contract_id"
                             nullable="false"/>
            </column>

            <column name="car_id" type="varchar(255)" remarks="ID машины из БД">
                <constraints foreignKeyName="car_fk"
                             referencedTableName="cars"
                             referencedColumnNames="id"
                             nullable="false"/>
            </column>

            <column name="client_id" type="bigint" remarks="ID клиента из БД">
                <constraints foreignKeyName="client_fk"
                             referencedTableName="clients"
                             referencedColumnNames="id"
                             nullable="false"/>
            </column>

            <column name="manager_id" type="bigint" remarks="ID менеджера из БД">
                <constraints foreignKeyName="manager_fk"
                             referencedTableName="managers"
                             referencedColumnNames="id"
                             nullable="false"/>
            </column>

            <column name="date" type="varchar(255)" remarks="Дата заключения договора">
                <constraints nullable="false"/>
            </column>

            <column name="sum" type="bigint" remarks="Сумма договора">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <createIndex tableName="contracts" indexName="contracts_id_idx">
            <column name="id"/>
        </createIndex>

        <createIndex tableName="contracts" indexName="contracts_data_idx">
            <column name="date"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>