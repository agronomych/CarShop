<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="1" author="Anton Suryapin">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="managers"/>
            </not>
        </preConditions>

        <createTable tableName="managers">
            <column name="id" type="bigint">
                <constraints primaryKey="true"
                             primaryKeyName="manager_pk"
                             nullable="false"/>
            </column>

            <column name="name" type="varchar(255)" remarks="Имя менеджера">
                <constraints nullable="false"/>
            </column>

            <column name="last_name" type="varchar(255)" remarks="Фамилия менеджера">
                <constraints nullable="false"/>
            </column>

            <column name="patronymic" type="varchar(255)" remarks="Отчество менеджера (если есть)"/>
        </createTable>

        <createIndex tableName="managers" indexName="managers_last_name_idx">
            <column name="last_name"/>
        </createIndex>

        <createIndex tableName="managers" indexName="managers_id_idx">
            <column name="id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>